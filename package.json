{
  "name": "correspondence-board-game",
  "version": "1.0.0",
  "description": "A webserver for asynchronous correspondence board games",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest tests/blackbox-simple.test.js",
    "test:architecture": "jest tests/architecture.test.js",
    "test:all": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:framework": "jest --coverage --testPathPattern=framework",
    "test:coverage:plugins": "jest --coverage --testPathPattern=plugins",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "coverage:check": "jest --coverage --passWithNoTests --silent",
    "coverage:enforce": "npm run test:coverage && node scripts/enforce-coverage.js",
    "tdd:check": "npm run coverage:enforce",
    "lint": "eslint src/",
    "lint:plugins": "eslint src/plugins/",
    "validate:plugins": "node scripts/validate-plugins.js",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cards": "^2.0.3",
    "chess.js": "^1.3.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "board-game",
    "correspondence",
    "api",
    "websocket"
  ],
  "author": "",
  "license": "MIT"
}
